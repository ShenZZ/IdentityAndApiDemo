@model LoginModel
@{
    ViewData["Title"] = "Login";
}

@if (Model.EnableLocalLogin)
{
    <div class="wrap">
        <div class="card">
            <div class="card-header">
                <h2>Login</h2>
            </div>

            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="ReturnUrl" />

                    <div class="mb-3">
                        <label class="form-label" asp-for="Username">Username (sam / sam)</label>
                        <input type="text" class="form-control" placeholder="Username" asp-for="Username" autofocus>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" asp-for="Password"></label>
                        <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" asp-for="RememberLogin">
                            <label class="form-check-label" asp-for="RememberLogin">Remember My Login</label>
                        </div>
                    </div>

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
} 
else
{
    <div class="alert alert-warning">
        <strong>Invalid login request</strong>
        There are no login schemes configured for this request.
    </div>
}